<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_credit_card_to_edit_title"
            style="@style/title_medium"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CartÃ£o de Credito" />

        <TextView
            android:id="@+id/item_credit_card_to_edit_limit_available"
            style="@style/title_regular"
            android:layout_marginTop="8dp"
            android:text="@string/title_credit_card_limit_available"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/item_credit_card_to_edit_title"
            app:layout_constraintTop_toBottomOf="@id/item_credit_card_to_edit_title" />

        <TextView
            android:id="@+id/item_credit_card_to_edit_available_limit"
            style="@style/title_regular"
            android:layout_marginStart="5dp"
            android:textColor="@color/green"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_credit_card_to_edit_limit_available"
            app:layout_constraintStart_toEndOf="@+id/item_credit_card_to_edit_limit_available"
            app:layout_constraintTop_toTopOf="@+id/item_credit_card_to_edit_limit_available"
            app:layout_constraintVertical_bias="0.0"
            tools:text="R$ 349,00" />

        <TextView
            android:id="@+id/item_credit_card_to_edit_limit_total_title"
            style="@style/title_regular"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:text="@string/title_credit_card_limit_total"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/item_credit_card_to_edit_title"
            app:layout_constraintTop_toBottomOf="@id/item_credit_card_to_edit_limit_available" />

        <TextView
            android:id="@+id/item_credit_card_to_edit_limit_total"
            style="@style/title_regular"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_credit_card_to_edit_limit_total_title"
            app:layout_constraintStart_toEndOf="@+id/item_credit_card_to_edit_limit_total_title"
            app:layout_constraintTop_toTopOf="@+id/item_credit_card_to_edit_limit_total_title"
            app:layout_constraintVertical_bias="0.0"
            tools:text="R$ 3.000,00" />

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/item_credit_card_to_edit_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_delete_outline_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>