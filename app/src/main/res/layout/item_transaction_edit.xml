<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_transactionEdit_user_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/profile_place"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_transactionEdit_description"
                style="@style/title_medium"
                android:textColor="@color/darkBlue"
                android:textSize="10dp"
                tools:text="Fatura NET" />

            <TextView
                android:id="@+id/item_transactionEdit_category"
                style="@style/title_regular"
                android:layout_marginVertical="2dp"
                android:textColor="@color/darkBlue"
                android:textSize="10sp"
                tools:text="Conta" />

            <TextView
                android:id="@+id/item_transactionEdit_date"
                style="@style/title_regular"
                android:textSize="10sp"
                android:textColor="@color/gray"
                tools:text="23 MarÃ§o 2023" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_transactionEdit_value"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/title_medium"
                tools:text="R$29,90"
                android:textColor="@color/black"/>

            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/item_transactionEdit_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_delete_outline_24"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>